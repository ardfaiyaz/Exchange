<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1c256c">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_gravity="left"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:id="@+id/backbtn"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat_bold"
                    android:gravity="center"
                    android:id="@+id/textView31"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="BACK" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/productlistingtxt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:orientation="vertical"></LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:padding="15dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:textColor="@color/white"
                    android:id="@+id/textView21"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+ Add Image" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/accountwhitebg"
                android:orientation="vertical"
                android:padding="30dp">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:padding="3dp"
                    android:text="Product Name:"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/productnameid"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:drawable/edit_text"
                    android:fontFamily="@font/montserrat"
                    android:hint="Enter Here"
                    android:padding="12dp"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:padding="3dp"
                    android:text="Select Variation:"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/variationspinner"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:padding="3dp"
                    android:text="Price:"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/productpriceid"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@android:drawable/edit_text"
                    android:fontFamily="@font/montserrat"
                    android:hint="P 00.00"
                    android:inputType="number"
                    android:padding="12dp"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:gravity="right"
                    android:inputType="number"
                    android:padding="3dp"
                    android:text="Stock"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/productstockid"
                    android:layout_width="60dp"
                    android:layout_height="45dp"
                    android:layout_gravity="right"
                    android:background="@android:drawable/edit_text"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:hint="0"
                    android:padding="12dp"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:paddingHorizontal="30dp"
                android:gravity="center|right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:background="@drawable/uploadbtnbg"

                    android:layout_width="130dp"
                    android:layout_height="40dp"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/black"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center"
                        android:id="@+id/uploadbtn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="UPLOAD" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
