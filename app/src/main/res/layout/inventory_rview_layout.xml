<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:layout_marginHorizontal="10dp"
    android:paddingHorizontal="8dp"
    android:paddingVertical="12dp"
    android:layout_marginBottom="15dp"
    android:background="@drawable/orderswhitebg"
    android:gravity="center_vertical">


    <!-- Item Image -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/itemImage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/item_id_lace" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemName"
                android:fontFamily="@font/montserrat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ITEM #1 LACE BSIT"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:id="@+id/itemVarId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="M"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:id="@+id/itemPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"
                android:text="â‚±80.00"
                android:textColor="@color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:gravity="center"
                android:fontFamily="@font/montserrat"
                android:id="@+id/itemStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="5dp"
                android:text="100/100"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>


    <!-- Item Name -->


    <!-- Item Size -->


    <!-- Item Price -->


    <!-- Item Stock -->


    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:orientation="horizontal">


        <Button
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:id="@+id/editIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:text="UPDATE"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:backgroundTint="#d7bf28"/>


        <Button
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginStart="5dp"
            android:id="@+id/deletebtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:text="DELETE"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:backgroundTint="#d91a1a" />
    </LinearLayout>
</LinearLayout>
