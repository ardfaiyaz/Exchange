<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_marginTop="2dp"
        android:background="#14155d"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox

                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:buttonTint="@android:color/white" />


            <ImageView
                android:id="@+id/productImage2"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginVertical="8dp"
                android:layout_weight="1"
                android:background="@drawable/id_it"
                android:contentDescription="Product Image"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="460dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textSize="8dp"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:layout_margin="10dp"
                android:id="@+id/itemname_inventory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ITEM #1 LACE BSIT" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textSize="8dp"
                android:id="@+id/pricetag_inventory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="P80.00"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textSize="8dp"
                android:id="@+id/stocks_inventory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="92/100"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>