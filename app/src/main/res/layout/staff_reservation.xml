<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/reservationbg">

    <LinearLayout
        android:id="@+id/backbtn"
        android:layout_width="82dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="310dp"

        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/bottomnav"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/usercartbtn"
            android:layout_width="137dp"
            android:layout_height="match_parent"
            android:background="@drawable/bottomnavbg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/announcementbtn_unactive" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userhomebtn"
            android:layout_width="136dp"
            android:layout_height="match_parent"
            android:background="@drawable/bottomnavbg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/homebtn_unactive" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/userprofilebtn"
            android:layout_width="141dp"
            android:layout_height="match_parent"
            android:background="@drawable/bottomnavbg_active"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/profilebtn" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
