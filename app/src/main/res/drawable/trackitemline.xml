<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Stick (rectangle) -->
    <item
        android:gravity="center_horizontal|center">
        <shape android:shape="rectangle">
            <solid android:color="#ec681d" />
            <size android:width="8dp" android:height="120dp" /> <!-- Adjusted height -->
        </shape>
    </item>

    <!-- Circle (centered with gaps above and below) -->
    <item
        android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="#ec681d" />
            <size android:width="30dp" android:height="30dp" /> <!-- Adjusted size -->
        </shape>
    </item>

</layer-list>
